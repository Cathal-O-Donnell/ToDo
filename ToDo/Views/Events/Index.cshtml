@model IEnumerable<ToDo.Models.Event>



<p style="padding-top: 25px;">
    @Html.ActionLink("Add Event", "Create", null, new { @class = "btn btn-info glyphicon-plus" })
</p>

@if (ViewBag.numberOfEvents > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventTown)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventVenue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventCategory)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventTown)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventVenue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventCategory)
                </td>               
                <td>
                   @Html.ActionLink("Details", "Details", new { id = item.EventID }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
}

else
{
    <h2 style="text-align:center;">There is no events posted yet</h2>
}
