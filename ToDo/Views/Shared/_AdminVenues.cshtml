@model IEnumerable<ToDo.Models.Venue>

@*<table class="table">*@
<table id="dataTable" class="table table-bordered table-responsive table-striped" cellspacing="0" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VenueTown.TownName)
            </th>
            <th>
                @*blank*@
            </th>
            <th>
                @*blank*@
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VenueTown.TownName)
                </td>
                <td>
                    @Html.ActionLink("Remove", "RemoveVenue", "Home", new { id = item.VenueID }, new { @class = "btn btn-sm btn-danger" })
                </td>
                <td>
                    @if (item.VenueActive == true)
                    {
                        @*@Html.ActionLink("Make Inactive", "VenueChangeStatus", "Home", new { id = item.VenueID }, new { @class = "btn btn-sm btn-warning" })*@
                        <button type="button" onclick="ChangeStatus(@item.VenueID);" data-VenueID="@item.VenueID" class = "btn btn-sm btn-warning">Make Inactive</button>
                    }

                    else if (item.VenueActive == false)
                    {
                        @*@Html.ActionLink("Make Active", "VenueChangeStatus", "Home", new { id = item.VenueID }, new { @class = "btn btn-sm btn-success" })*@
                        <button type="button" onclick="ChangeStatus(@item.VenueID);"  data-VenueID="@item.VenueID" class="btn btn-sm btn-success">Make Active</button>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    //DataTable
    $(document).ready(function () {
        $('#dataTable').DataTable();
    });

    //$("#btnChangeStatus").click(function () {
    function ChangeStatus(VeID) {
        console.log(VeID);

        $.ajax({
            type: "GET",
            url: '@Url.Action("VenueChangeStatus", "Home")',
            data: { id: VeID },
            success: function (data) {

                $('#AdminVenues').html(data);
                $('#AdminVenues').fadeIn("fast")
            }
        });
    }
</script>
