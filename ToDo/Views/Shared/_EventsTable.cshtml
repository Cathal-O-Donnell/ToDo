@model IEnumerable<ToDo.Models.Event>

@*Search Box*@
@using (Html.BeginForm())
{

    <form class="form-horizontal" role="form">
        <div class="form-group" style="padding-bottom: 10px;">

            <div class="input-group col-md-2">
                @if (ViewBag.SearchTerm != null)
                {
                    <input type="text" id="txtSearch" class="search-query form-control" value="@ViewBag.SearchTerm" />
                }
                else
                {
                    <input type="text" id="txtSearch" class="search-query form-control" placeholder="Search..." />
                }
                
                <span class="input-group-btn">
                    <button id="btnCustomerInc" onclick="VenueSearch();" class="btn btn-info" type="button">
                        <span class="glyphicon glyphicon-search"></span>
                    </button>
                </span>
            </div>

            <div class="col-md-2">
                @Html.DropDownList("TownId", (SelectList)ViewBag.Towns, "Please select", new { @class = "form-control", id = "lstTowns" })
            </div>

            <div class="col-md-2">
                @Html.DropDownList("EventCategoryID", (SelectList)ViewBag.EventCategories, "Please select", new { @class = "form-control", id = "lstEventCat" })
            </div>

            <div class="col-md-1">
                <span class="btn btn-sm btn-primary" onclick="AdvanceSearch();">Search</span>
            </div>

            <div class="col-md-1">
                <span class="btn btn-sm btn-warning" onclick="Reset();">Reset</span>
            </div>
        </div>
    </form>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EventTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue.VenueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventCat.EventCategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue.VenueTown.TownName)
        </th>
        <th>
            @*blank*@
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventCat.EventCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue.VenueTown.TownName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.EventID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

<script>
    function VenueSearch() {
        //Get the search term the user entered
        var search = document.getElementById("txtSearch").value;

        //Ajax code
        $.ajax({
            type: "GET",
            url: '@Url.Action("EventsTablePartialView", "Events")',
            data: { search: search },
            success: function (data) {

                $('#EventTable').html(data);
                $('#EventTable').fadeIn("fast")
            }
        });
    }

    function AdvanceSearch() {
        var town = document.getElementById("lstTowns").value;
        var eventCat = document.getElementById("lstEventCat").value;
        var search = document.getElementById("txtSearch").value;

        var advancedSearch = "true";
        //Ajax code
        $.ajax({
            type: "GET",
            url: '@Url.Action("EventsTablePartialView", "Events")',
            data: { Town: town, EventCategory: eventCat, AdvancedSearch: advancedSearch, search: search },
            success: function (data) {

                $('#EventTable').html(data);
                $('#EventTable').fadeIn("fast")
            }
        });
    }

    function Reset() {
        var advancedSearch = "false";
        //Ajax code
        $.ajax({
            type: "GET",
            url: '@Url.Action("EventsTablePartialView", "Events")',
            data: { AdvancedSearch: advancedSearch },
            success: function (data) {

                $('#EventTable').html(data);
                $('#EventTable').fadeIn("fast")
            }
        });
    }

</script>