@model IEnumerable<ToDo.Models.Event>

<div class="row">
    @foreach (var item in Model)
    {

        <div class="col-md-4 col-sm-4 col-xs-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h1 class="panel-title">@Html.DisplayFor(modelItem => item.EventTitle) - @Html.DisplayFor(modelItem => item.Venue.VenueTown.TownName)</h1>
                </div>
                <div class="panel-body"  style="height: 350px;">
                        <img src="~/File?id=@item.Files.First().FileId" alt="imgEvent" class="img-responsive" style="width:300px; height: 300px;">
                    </div>
                <div class="panel-footer">
                    <center>@Html.ActionLink("Details", "Details", "Events", new { id = item.EventID }, new { @class = "btn btn-primary" })</center>
                </div>
            </div>
        </div>
    }
</div>

