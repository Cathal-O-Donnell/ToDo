@model ToDo.Models.Band


@using (Html.BeginForm("Create", "Bands", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="row">

            <div class="col-md-6">
                <h2>Change model names</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @*Name*@
